{
	"name": "wosh-cli",
	"version": "0.0.5",
	"description": "CLI to interact with Wosh - A local first secret management tool",
	"license": "MIT",
	"author": "Prashant Singh prashant.s2922@gmail.com",
	"repository": {
		"type": "git",
		"url": "https://github.com/Prashant-S29/wosh-cli"
	},
	"keywords": [
		"cli",
		"secrets",
		"environment",
		"wosh"
	],
	"bin": {
		"wosh-cli": "dist/source/cli.js"
	},
	"type": "module",
	"engines": {
		"node": ">=16"
	},
	"scripts": {
		"build": "tsc",
		"dev": "tsc --watch",
		"test": "prettier --write . && xo && ava",
		"format": "prettier --write \"**/*.{js,jsx,ts,tsx,css,md,json,html}\"",
		"update-name": "npm run build && npm unlink -g || true && npm link",
		"typecheck": "tsc --noEmit",
		"lint": "eslint ."
	},
	"files": [
		"dist"
	],
	"dependencies": {
		"@inkjs/ui": "^2.0.0",
		"@noble/curves": "^2.0.1",
		"@noble/hashes": "^2.0.1",
		"@tanstack/react-query": "^5.90.2",
		"dotenv": "^17.2.3",
		"figlet": "^1.9.3",
		"ink": "^6.3.1",
		"ink-spinner": "^5.0.0",
		"ink-text-input": "^6.0.0",
		"meow": "^14.0.0",
		"node-fetch": "^3.3.2",
		"react": "^19.2.0"
	},
	"devDependencies": {
		"@eslint/js": "^9.38.0",
		"@sindresorhus/tsconfig": "^8.0.1",
		"@types/figlet": "^1.7.0",
		"@types/ink": "^0.5.2",
		"@types/react": "^19.2.2",
		"@typescript-eslint/eslint-plugin": "^8.46.2",
		"@typescript-eslint/parser": "^8.46.2",
		"@vdemedes/prettier-config": "^2.0.1",
		"ava": "^6.4.1",
		"chalk": "^5.6.2",
		"eslint": "^9.38.0",
		"eslint-config-prettier": "^10.1.8",
		"eslint-config-xo-react": "^0.28.0",
		"eslint-plugin-prettier": "^5.5.4",
		"eslint-plugin-react": "^7.37.5",
		"eslint-plugin-react-hooks": "^7.0.1",
		"globals": "^16.4.0",
		"ink-testing-library": "^4.0.0",
		"prettier": "^3.6.2",
		"ts-node": "^10.9.2",
		"typescript": "^5.9.3",
		"typescript-eslint": "^8.46.2",
		"xo": "^0.60.0"
	},
	"ava": {
		"extensions": {
			"ts": "module",
			"tsx": "module"
		},
		"nodeArguments": [
			"--loader=ts-node/esm"
		]
	},
	"xo": {
		"extends": "xo-react",
		"prettier": true,
		"rules": {
			"react/prop-types": "off"
		}
	},
	"prettier": "@vdemedes/prettier-config"
}
